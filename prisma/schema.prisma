generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String?  // external link
  location    String?
  // store UTC ISO strings; render in local on client
  start       DateTime
  end         DateTime
  timezone    String?  // optional display/default "America/New_York"
  source      String?  // e.g., "Beeler.Tech", "IAB", etc.

  // NEW: tags and structured location fields
  // NOTE: Changed from String[] to String for SQLite compatibility - store as JSON string
  tags        String?  // JSON array string, e.g., '["tag1","tag2"]'
  country     String?
  region      String?  // State/province
  city        String?

  status      String   @default("PUBLISHED") // PUBLISHED | PENDING
  // Counter cache
  subscribers Int      @default(0)
  // Track who submitted the event
  submittedBy String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // relations
  follows     EventFollow[]
  userEventSyncs UserEventSync[]
  filterExclusions FilterExclusion[]
  submitter   User?    @relation("SubmittedEvents", fields: [submittedBy], references: [id])
}

model MonitoredUrl {
  id            String   @id @default(cuid())
  url           String   @unique
  name          String?
  enabled       Boolean  @default(true)
  lastChecked   DateTime?
  lastSuccess   DateTime?
  lastError     String?
  checkInterval Int      @default(86400000) // 24 hours in milliseconds
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model User {
  id            String   @id @default(cuid())
  email         String?  @unique
  name          String?
  // Authentication
  password      String?  // Hashed password for credentials provider (optional for OAuth users)
  // Profile fields we want to capture
  company       String?
  title         String?
  companyEmail  String?
  location      String?
  linkedInProfile String? // LinkedIn profile URL
  // Consent & preferences
  consentEmail        Boolean  @default(false)
  consentCalendar     Boolean  @default(false)
  termsAcceptedAt     DateTime?
  // Admin access
  isAdmin             Boolean  @default(false)
  // Token for personal iCal feeds
  feedToken     String?  @unique
  // Google Calendar integration
  gcalCalendarId      String?  // Dedicated calendar ID created in Google
  gcalSyncEnabled     Boolean  @default(false) // User opted in / connected
  gcalSyncPending     Boolean  @default(false) // Queued for background sync
  gcalSyncMode        String   @default("FULL") // "FULL" | "CUSTOM"
  gcalLastSyncedAt    DateTime? // Incremental sync cursor
  gcalLastSyncError   String? // Last sync error message
  gcalLastSyncAttemptAt DateTime? // Last sync attempt timestamp
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  // NextAuth relations (if using Auth.js adapter)
  accounts      Account[]
  sessions      Session[]
  // Subscription relations
  subscriptions Subscription[]
  eventFollows  EventFollow[]
  userEventSyncs UserEventSync[]
  filterExclusions FilterExclusion[]
  // Events submitted by this user
  submittedEvents Event[] @relation("SubmittedEvents")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  kind        String   // 'FULL' | 'CUSTOM'
  active      Boolean  @default(true)
  filter      String?  // JSON filter for rule-based subscriptions (tags, location, date range)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  selections  EventFollow[]
  filterExclusions FilterExclusion[]
  @@index([userId, kind, active])
}

model EventFollow {
  id             String   @id @default(cuid())
  userId         String
  eventId        String
  subscriptionId String?
  source         String   @default("MANUAL")  // "MANUAL" | "FILTER"
  createdAt      DateTime @default(now())
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  event          Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id], onDelete: SetNull)
  @@unique([userId, eventId]) // a user follows an event at most once
  @@index([eventId])
  @@index([subscriptionId])
}

model Tag {
  id          String   @id @default(cuid())
  name        String   @unique  // Normalized tag name (lowercase, hyphenated)
  displayName String?  // Optional friendly display name
  description String?  // Optional description
  color       String?  // Optional color for UI (hex code)
  keywords    String?  // JSON array string, e.g., '["keyword1","keyword2"]'
  usageCount  Int      @default(0)  // Cache count of events using this tag
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([name])
}

model UserEventSync {
  id          String   @id @default(cuid())
  userId      String
  eventId     String
  gcalEventId String?  // Google Calendar event ID (optional, for faster lookups)
  syncedAt    DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
}

model FilterExclusion {
  id             String   @id @default(cuid())
  userId         String
  eventId        String
  subscriptionId String   // The filter subscription this exclusion applies to
  createdAt      DateTime @default(now())
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  event          Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  subscription   Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  @@unique([userId, eventId, subscriptionId])
  @@index([userId])
  @@index([eventId])
  @@index([subscriptionId])
}